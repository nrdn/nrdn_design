extends ../../layout

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/add.css')

block content_scripts
	script(type='text/javascript', src='/scripts/add.js')

block content
	.form_block
		a.back_link(href='/auth') < Назад
		.title ДОБАВИТЬ РАБОТУ
		form(action="/auth/add/work", method="post", enctype="multipart/form-data")
			.form_title Заголовок:
			input.ru(type="text", name="ru[title]",)
			input.en(type="text", name="en[title]", disabled)
			.form_title Описание:
			textarea.ru(name="ru[description]", rows="8",)
			textarea.en(name="en[description]", rows="8", disabled)
			.form_title Лого:
			input(type="text", name="logo",)
			.form_title Картинки:
			.snake
				input(type="file", name="photo[0]")
			input.plus(type="button", value="-")
			input.minus(type="button", value="+")
			//- .form_title Категория:
			//- select(name='tag')
				option(value='one') раз
				option(value='two') два
				option(value='three') три
			br
			br
			input(type='button', class='toggle_eng', value='Перевод')
			input(type="submit", value="Добавить")